{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "@assets/*": ["assets/*"],
            "@components/*": ["components/*"],
            "@pages/*": ["pages/*"],
            "@styles/*": ["styles/*"],
            "@layouts/*": ["layouts/*"],
            "@config": ["config.ts"],
            "@utils": ["utils/utils.js"]
        },
        "plugins": [
            {
                "name": "@astrojs/ts-plugin"
            }
        ]
    }
}

